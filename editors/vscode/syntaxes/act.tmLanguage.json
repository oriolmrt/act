{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Act",
    "scopeName": "source.act",
    "fileTypes": ["act"],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#signals"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#template-strings"
        },
        {
            "include": "#identifiers"
        },
        {
            "include": "#block-delimiters"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#dom-selectors"
        },
        {
            "include": "#property-prefixes"
        },
        {
            "include": "#query-selectors"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#terminators"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.act",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.act",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.act",
                    "match": "\\b(if|else|each|for|while|loop|with|new|run|on|off|kill|throw|then)\\b(?![-\\w])"
                },
                {
                    "name": "keyword.other.act",
                    "match": "\\b(local|global|scoped|not|negative|type|wat|in|from|to|step)\\b(?![-\\w])"
                }
            ]
        },
        "signals": {
            "patterns": [
                {
                    "name": "keyword.control.flow.act",
                    "match": "\\b(break|continue|repeat|restart|stop|halt|return)\\b(?![-\\w])"
                }
            ]
        },
        "block-delimiters": {
            "patterns": [
                {
                    "name": "punctuation.section.block.begin.act",
                    "match": "\\bdo\\b(?![-\\w])"
                },
                {
                    "name": "punctuation.section.block.end.act",
                    "match": "\\bend\\b(?![-\\w])"
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "variable.other.readwrite.act",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_-]*\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.word.act",
                    "match": "\\b(is_not_in|is_not|is_in|is_a|is_an|as|rescue|and|or)\\b(?![-\\w])"
                },
                {
                    "name": "keyword.operator.assignment.act",
                    "match": "(?<=\\s)(\\+=|-=|=)(?=\\s)"
                },
                {
                    "name": "keyword.operator.comparison.word.act",
                    "match": "\\b(is|is_not)\\b(?![-\\w])"
                },
                {
                    "name": "keyword.operator.comparison.symbol.act",
                    "match": "(?<=\\s)(==|!=|>=|<=|>|<)(?=\\s)"
                },
                {
                    "name": "keyword.operator.arithmetic.act",
                    "match": "(?<=\\s)(\\+|-|\\*|/|%)(?=\\s)"
                },
                {
                    "name": "keyword.operator.other.act",
                    "match": "(?<=\\s)(<<|\\||!:?)(?=\\s)"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.act",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.act",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.act",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.act",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "template-strings": {
            "patterns": [
                {
                    "name": "string.template.act",
                    "begin": "`",
                    "end": "`",
                    "patterns": [
                        {
                            "name": "meta.embedded.line.act",
                            "begin": "\\{",
                            "end": "\\}",
                            "patterns": [
                                {
                                    "include": "$self"
                                }
                            ]
                        },
                        {
                            "name": "constant.character.escape.act",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.dimension.act",
                    "match": "\\b\\d+(\\.\\d+)?(px|rem|em|s|ms|%|vh|vw|fr|deg|rad|turn)\\b"
                },
                {
                    "name": "constant.numeric.act",
                    "match": "\\b\\d+(\\.\\d+)?\\b"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.act",
                    "match": "\\$[A-Za-z_][A-Za-z0-9_]*"
                }
            ]
        },
        "dom-selectors": {
            "patterns": [
                {
                    "name": "entity.name.tag.id.act",
                    "match": "#[A-Za-z0-9_][A-Za-z0-9_-]*"
                },
                {
                    "name": "entity.name.tag.class.act",
                    "match": "\\.[A-Za-z_][A-Za-z0-9_-]*"
                },
                {
                    "name": "entity.name.tag.html.act",
                    "match": "<[A-Za-z_][A-Za-z0-9_-]*>"
                }
            ]
        },
        "property-prefixes": {
            "patterns": [
                {
                    "name": "entity.other.attribute-name.act",
                    "match": "@[A-Za-z_][A-Za-z0-9_-]*"
                },
                {
                    "name": "support.type.property-name.css.act",
                    "match": "\\*[A-Za-z_][A-Za-z0-9_-]*"
                },
                {
                    "name": "variable.other.property.act",
                    "match": ":[A-Za-z_][A-Za-z0-9_]*"
                }
            ]
        },
        "query-selectors": {
            "patterns": [
                {
                    "name": "meta.selector.act",
                    "begin": "\\{",
                    "end": "\\}",
                    "patterns": [
                        {
                            "name": "meta.embedded.line.act",
                            "begin": "\\{",
                            "end": "\\}",
                            "patterns": [
                                {
                                    "include": "$self"
                                }
                            ]
                        },
                        {
                            "name": "string.other.selector.act",
                            "match": "[^{}]+"
                        }
                    ]
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "storage.type.function.arrow.act",
                    "match": "->"
                }
            ]
        },
        "terminators": {
            "patterns": [
                {
                    "name": "punctuation.terminator.statement.act",
                    "match": ";|&|\\?|else\\?"
                }
            ]
        }
    }
}